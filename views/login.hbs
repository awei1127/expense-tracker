<div class="container">
  <div class="card card-body w-50 mx-auto mt-5">
    <form action="/users/login" method="POST">
      <div class="mb-4 row">
        <label class="col-sm-2"></label>
        <div class="col-sm-10">
          {{> message}}
          <h2 class="text-center">登入</h2>
        </div>
      </div>
      <div class="mb-4 row">
        <label for="email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
          <input type="email" class="form-control" id="email" name="email" placeholder="輸入Email..." value="{{email}}">
        </div>
      </div>
      <div class="mb-4 row">
        <label for="password" class="col-sm-2 col-form-label">密碼</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" id="password" name="password" placeholder="輸入密碼..."
            value="{{password}}">
        </div>
      </div>
      <div class="mb-4 row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10 align-item-end">
          <button type="submit" class="btn btn-success w-100 mt-3">送出</button>
        </div>
      </div>
    </form>
  </div>
</div>