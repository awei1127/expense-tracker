<div class="container">
  <div class="card card-body w-50 mx-auto mt-5">
    <form action="/new" method="POST">
      <div class="mb-4 row">
        <label class="col-sm-2 col-form-label">*必填欄位</label>
        <div class="col-sm-10">
          <h2 class="text-center">請輸入你的支出</h2>
        </div>
      </div>
      <div class="mb-4 row">
        <label for="name" class="col-sm-2 col-form-label">名稱*：</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="name" name="name" placeholder="輸入支出名稱...">
        </div>
      </div>
      <div class="mb-4 row">
        <label for="date" class="col-sm-2 col-form-label">日期*：</label>
        <div class="col-sm-10">
          <input type="date" class="form-control" id="date" name="date" value="{{date}}">
        </div>
      </div>
      <div class="mb-4 row">
        <label for="categoryId" class="col-sm-2 col-form-label">類別*：</label>
        <div class="col-sm-10">
          <select class="form-select" id="categoryId" name="categoryId">
            {{#each categories}}
            <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="mb-4 row">
        <label for="amount" class="col-sm-2 col-form-label">金額*：</label>
        <div class="col-sm-10">
          <input type="number" class="form-control" id="amount" name="amount" placeholder="輸入金額...">
        </div>
      </div>
      <div class="mb-4 row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10 align-item-end">
          <button type="submit" class="btn btn-success w-100 mt-3">新增支出</button>
        </div>
      </div>
    </form>
  </div>
</div>